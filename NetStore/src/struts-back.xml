<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="back" extends="struts-default">
	
		<!--后台登陆页面 
		<action name="backLogin">
			<result>/WEB-INF/jsp/back/login.jsp</result>
		</action>
		-->
		<!-- 后台登陆(后台登陆页面) -->
		<action name="backLogin" class="BackLoginAction">
			<result name="success">/WEB-INF/jsp/back/back.jsp</result>
			<result name="input">/WEB-INF/jsp/back/login.jsp</result>
		</action>
		<!-- 后台退出 -->
		<action name="backExit" class="BackExitAction">
			<result name="success">/WEB-INF/jsp/back/login.jsp</result>
		</action>
		<!-- 后台修改密码 -->
		<action name="updatePass" class="UpdatePassAction">
			<result name="success">/WEB-INF/jsp/back/back.jsp</result>
			<result name="input">/WEB-INF/jsp/back/updatePass.jsp</result>
		</action>
		
	</package>

</struts>
