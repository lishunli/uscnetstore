<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="user" extends="struts-default">
		<!-- 注册 -->
		<action name="RegisterAction" class="RegisterAction">
			<result name="success" type="redirect">
				/customjsp/RegisterSuccess.jsp
			</result>
			<result name="error" type="redirect">/customjsp/Register.jsp</result>
		</action>

		<!-- 登录 -->
		<action name="LoginAction" class="LoginAction">
			<result name="success" type="redirect">/Top.jsp</result>
			<result name="error" type="redirect">/customjsp/Login.jsp</result>
			<result name="input" type="redirect">/customjsp/Login.jsp</result>
		</action>
		
		<!-- 搜索产品 -->
		<action name="FuzzySearchAction" class="FuzzySearchAction">
	      <result>/customjsp/FuzzySearch.jsp</result>
		</action>
		
		<!-- 用户信息修改 -->
     <action name="UserInforChangeAction" class="UserInforChangeAction">
     <result name="success">/customjsp/UserInforChangeSuccess.jsp</result>
     </action>
     
     <!-- 用户修改密码 -->
     <action name="PersonManagerCPasswordAction" class="PersonManagerCPasswordAction">
     <result name="success">/customjsp/UserPassChangeSuccess.jsp</result>
     <result name="error">/customjsp/PersonManagerCPassword.jsp</result>
     </action>
     
     <!--  用户修改Email-->    
     <action name="PersonManagerCEmailAction" class="PersonManagerCEmailAction">
     <result name="success">/customjsp/UserEmailChangeSuccess.jsp</result>
     </action>
	</package>
</struts>